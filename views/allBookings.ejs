<%- include('header') %>

    <section class="mt-5 pb-5" style="margin-bottom: 30%;">

        <div class="middle myAlign wow zoomIn pt-4">
            <h1>All <span style="color: rgb(255, 217, 0);">Bookings</span></h1>
      </div>

        <div class="container col-lg-6 myAlign mt-5 box-class wow fadeInUp">

            <div class="row myAlign">
                <table class="table">

                    <thead>
                        <tr>
                            <!-- <th scope="col">Sr. No</th> -->
                            <th scope="col">Sr.No.</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Booked Packages</th>
                        </tr>
                    </thead>
    
                    <tbody>
                        <% for(var i=0; i<foundUsers.length; i++){ %>
                            <tr>

                                <td><%= i+1 %></td>
                                <td><%= foundUsers[i].username %></td>
                                <!-- <td><a href="">View All Packages</a></td> -->
                                <td>
                                    <form action="/showBookings" method="post">
                                        <button type="submit" name="showBtn" value="<%= foundUsers[i].id %>" class="btn btn-primary">View Bookings</button>
                                    </form>
                                </td>

                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

    </section>

    <%- include('footer') %>