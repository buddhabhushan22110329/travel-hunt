<%- include('header') %>

<div class="middle myAlign pt-5 wow zoomIn">


      <% if(adminLogged){ %>
        <h1>Login as Admin</h1>
      <% }else{ %>
        <h1>Login</h1>
      <% } %>

  
</div>

<section class="myCenter pb-5 mb-5">
  
<div class="container mt-5">


  <div class="row myCenter">
    <div class="col-lg-4">
      <div class="card wow zoomIn">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="username">Username</label>
              <input required type="text" class="form-control" name="username" placeholder="Enter Username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input required type="password" class="form-control" name="password" placeholder="Enter Password">
            </div>
            <div class="loginBtnClass myAlign mt-5">
              <button type="submit" class="btn btn-dark lgbtn">Login</button>
            </div>
          </form>

          <%if(adminLogged){ %>
            <div class="memberClass myAlign mt-4">
              <p>Login as <a href="/loginUser">User</a></p>
            </div>
          <%}else{ %>
            <div class="memberClass myAlign mt-4">
              <p>Login as <a href="/admin">Admin</a></p>
            </div>
          <%} %>

          <%if(adminLogged==false){ %>
            <div class="memberClass myAlign mt-4">
              <p>Not a member? <a href="/register">Sign Up</a></p>
            </div>
  
  
            <div class="memberClass myAlign mt-3">
              <p>or sign In with:</p>
            </div>
  
            <div class="memberClass myAlign mt-3 myCenter">
      
                <li><a class="fa-brands fa-facebook fa-xl"style="color: #337eff;"></a></li>
                <li><a class="fa-brands fa-google fa-xl" style="color: #337eff;" href="/auth/google"></a></li>
                <li><a class="fa-brands fa-twitter fa-xl" style="color: #337eff;"></a></li>
                <li><a class="fa-brands fa-square-instagram fa-xl" style="color: #337eff;"></a></li>
      
            </div>
          <%} %>

        </div>
      </div>
    </div>

  </div>
</div>
</section>

<%- include('footer') %>
