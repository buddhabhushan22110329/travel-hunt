<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.2.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.2.0/dist/js/bootstrap.bundle.min.js
  "></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">

    <link rel="stylesheet" type="text/css"
        href="https://cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick-theme.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


    <!-- <link rel="stylesheet" href="../assets/css/style2.css"> -->
    <link rel="stylesheet" href="../assets/css/style.css">

    <!-- css file for animation  -->
    <link rel="stylesheet" href="assets\vendor\animate\animate.css">
    <link rel="stylesheet" href="assets\vendor\owl-carousel\css\owl.carousel.css">


    <!-- Include Razorpay SDK -->
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.5/axios.min.js"
        integrity="sha512-nnNHpffPSgINrsR8ZAIgFUIMexORL5tPwsfktOTxVYSv+AUAILuFYWES8IHl+hhIhpFGlKvWFiz9ZEusrPcSBQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- html2pdf -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"
        integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</head>

<body>




    <!-- <div class="middle myAlign pt-5 wow zoomIn">
        <h1>Invoice</h1>
    </div> -->

    <section id="invoice" class="myCenter pb-5 mb-5" style="margin-bottom: 15%;">

        <div class="container mt-2">

            <div class="row myCenter">
                <div class="col-lg-10 col-sm-6">
                    <div class="card wow zoomIn" style="background-color: rgb(249, 249, 249);">
                        <div class="card-body mb-5">

                            <div class="row">
                                <div class="sender col-lg-4">
                                    <div class="senderDetails">
                                        <h1 style="font-weight: bold;">Invoice</h1>
                                    </div>
                                </div>

                                <div class="sender col-lg-4 ml-auto">
                                    <div class="senderDetails" style="text-align: right; line-height: 1;">
                                        <h4 style="font-weight: bold;">Travel Hunts</h4>
                                        <p>Stanza living Austin House, 5th floor <br>
                                            Pune - 411048 <br>
                                            India</p>
                                    </div>
                                </div>
                            </div>

                            <hr style="border: 1px solid rgb(165, 165, 165);">



                            <div class="row">

                                <div class="user col-lg-4">
                                    <div class="userDetails" style="line-height: 1.3;">
                                        <p> <span style="font-weight: bold;">Name:</span>
                                            <%= Name %>
                                        </p>


                                        <p> <span style="font-weight: bold;">Mobile no:</span>
                                            <%= mobile %>
                                        </p>

                                    </div>
                                </div>


                                <div class="user col-lg-4 ml-auto">
                                    <div class="userDetails" style="line-height: 1.3; text-align: right;">
                                        <p> <span style="font-weight: bold;">Invoice no:</span> 101012</p>

                                        <p> <span style="font-weight: bold;">Date:</span>
                                            <%= date %>
                                        </p>
                                        </p>
                                    </div>
                                </div>
                            </div>


                            <div class="row mt-5">
                                <div class="myCenter col-lg-12">
                                    <table class="table">

                                        <thead>
                                            <tr>
                                                <th scope="col" style="font-weight: bold;">Package</th>
                                                <th style="text-align: right; font-weight: bold;" scope="col">No. of
                                                    adults</th>
                                                <th class="col-lg-1" style="text-align: right; font-weight: bold;"
                                                    scope="col">Price</th>
                                                <th class="col-lg-1" style="text-align: right; font-weight: bold;"
                                                    scope="col">Total</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <td>
                                                    <%= destination %>
                                                </td>
                                                <td style="text-align: right;">
                                                    <%= adults %>
                                                </td>
                                                <td style="text-align: right;">₹18000.00</td>
                                                <td style="text-align: right;">₹36000.00</td>
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>


                            <div class="row mt-3" style="line-height: 0;">
                                <div class="col-lg-12" style="text-align:right;">
                                    <table class="table">

                                        <thead>
                                            <tr>
                                                <th class="col-lg-12" style="text-align:right;" scope="col">Subtotal:
                                                </th>
                                                <th class="col-lg-12" style="text-align:right; font-weight: lighter;"
                                                    scope="col">₹36000.00</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <td style="text-align: right; font-weight: bold;">GST: </td>
                                                <td style="text-align: right;">₹3000.00</td>
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>


                            <div class="row" style="line-height: 0;">
                                <div class="col-lg-12" style="text-align:right;">
                                    <table class="table">

                                        <thead>
                                            <tr>
                                                <th class="col-lg-12" style="text-align:right;" scope="col">Total:</th>
                                                <th class="col-lg-12" style="text-align:right; font-weight: lighter;"
                                                    scope="col">₹39000.00</th>
                                            </tr>
                                        </thead>

                                    </table>
                                </div>
                            </div>

                             <!-- dummy table -->
                            <div class="row mt-5">
                                <div class="myCenter col-lg-12">
                                    <table class="table">

                                        <tbody>
                                            <tr>
                                                <td></td>
                                                <td style="text-align: right;"></td>
                                                <td style="text-align: right;"> </td>
                                                <td style="text-align: right;"> </td>
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>

                        </div>


                    </div>
                </div>

            </div>

        </div>

    </section>

    <div class="row myCenter pb-5">
        <div class="col-lg-2">
            <div class="loginBtnClass myAlign">
                <button onclick="download()" class="btn btn-dark lgbtn">Download</button>
            </div>
        </div>
    </div>

    <div class="row myCenter pb-5">
        <div class="col-lg-2">
            <form action="/backToMyBookings" method="post">
                <div class="loginBtnClass myAlign">
                    <button type="submit" class="btn btn-dark lgbtn">My Bookings</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        var element = document.getElementById("invoice");

        function download() {
            html2pdf()
                .from(element)
                .save();
        }

    </script>

    <script src="../assets/js/jquery-3.5.1.min.js"></script>

    <script src="../assets/js/bootstrap.bundle.min.js"></script>

    <script src="../assets/vendor/owl-carousel/js/owl.carousel.min.js"></script>

    <script src="../assets/vendor/wow/wow.min.js"></script>

    <script src="../assets/js/theme.js"></script>

    <script src="../public/assets/js/theme.js"></script>
    <script src="https://kit.fontawesome.com/75be747111.js" crossorigin="anonymous"></script>

</body>

</html>